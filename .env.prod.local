# Django settings
DJANGO_SECRET_KEY=please_change_this_to_a_random_50_plus_character_string
DJANGO_SETTINGS_MODULE=config.settings.production
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
POSTGRES_DB=conduit
POSTGRES_USER=conduit_user
POSTGRES_PASSWORD=please_change_this_to_a_secure_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Domain and SSL settings
DOMAIN=localhost
CERTBOT_EMAIL=your-email@example.com

# Next.js settings (for frontend)
NEXTAUTH_SECRET=please_change_this_to_a_random_32_plus_character_string
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Python settings
PYTHONPATH=/code/conduit
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Redis settings
REDIS_URL=redis://redis:6379/0

# Email settings (if needed)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password 