# Django settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=0

# Domain configuration
DOMAIN=brandfocus.ai
ALLOWED_HOSTS=brandfocus.ai,www.brandfocus.ai,api.brandfocus.ai

# Database settings
POSTGRES_DB=conduit
POSTGRES_USER=conduit_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis settings
REDIS_URL=redis://redis:6379/0

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# SSL/TLS settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Sentry settings (optional)
SENTRY_DSN=your-sentry-dsn

# Rate limiting
RATELIMIT_ENABLE=True
RATELIMIT_RATE=100/m

# Static and media files
STATIC_ROOT=/code/conduit/static
MEDIA_ROOT=/code/conduit/media

# Logging
LOG_LEVEL=INFO
LOG_DIR=/code/conduit/logs 